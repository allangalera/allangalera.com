---
import { experiences } from '@/data/experiences';
import { ExperienceItem } from '@/modules/resume/components/Experience';
import { calculateWholeExperienceTime, period } from '../utils';

const { startDate, endDate } = calculateWholeExperienceTime(experiences);
---

<div class="m-auto grid h-full max-w-2xl gap-8">
  <div class="flex items-center gap-4">
    <h1 class="text-3xl md:text-5xl">Resume</h1>
  </div>
  <div id="resume" class="grid gap-3">
    <div class="flex items-baseline gap-2">
      <h2 class="text-2xl leading-tight md:text-4xl">Experience</h2>
      <p class="text-xs font-normal">
        ({period({ start: startDate, end: endDate })})
      </p>
    </div>
    <div class="flex flex-1 flex-col gap-4">
      {experiences.map((job) => <ExperienceItem {...job} client:load />)}
    </div>
  </div>
</div>
